<div class="mt-4">
    <h3>Edit Courses</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Course's name: </label>
            <input type="text" value="{{course.name}}" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Course's description: </label>
            <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Course's videoId: </label>
            <input type="text" value="{{course.videoId}}" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Course's level: </label>
            <input type="text" value="{{course.level}}" class="form-control" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-info">Update course</button>
    </form>
</div>