<div class="mt-4">
    <h3>Create Courses</h3>
    <form method="POST" action="/courses/repository">
        <div class="form-group">
            <label for="name">Course's name: </label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Course's description: </label>
            <input type="text" class="form-control" id="description" name="description">
        </div>
        <div class="form-group">
            <label for="videoId">Course's videoId: </label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Course's level: </label>
            <input type="text" class="form-control" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-info">Generate course</button>
    </form>
</div>